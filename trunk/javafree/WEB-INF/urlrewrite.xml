<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.2//EN"
        "http://tuckey.org/res/dtds/urlrewrite3.2.dtd">

<urlrewrite>

    <rule>
        <note>
            The rule means that requests to /test/status/ will be redirected to /rewrite-status
            the url will be rewritten.
        </note>
        <from>/test/status/</from>
        <to type="redirect">%{context-path}/rewrite-status</to>
    </rule>

	<rule>
		<from>/javabb/(.*)</from>
		<run class="org.javabb.infra.ReplaceBBServlet" method="replaceBB" />
	</rule>
	
	<rule>
		<from casesensitive="true">/javabb/</from>
		<to type="redirect">/index</to>
	</rule>
	<rule>
		<from casesensitive="true">/javabb</from>
		<to type="redirect">/index</to>
	</rule>

	<rule>
		<from>/index.jf</from>
		<to>loadHome.jbb</to>
	</rule>

    <rule>
        <note>
            Adapting old phpbb posts
        </note>
		<from>/forum/viewtopic.php?(.*)$</from>
        <to>viewtopic.jbb?$1</to>
	</rule>

	<rule>
		<from>/index</from>
        <to>forum.jbb</to>
	</rule>
	
    <rule>
		<from>/jf/</from>
        <to>loadHome.jbb</to>
	</rule>
	
    <rule>
		<from>/f-([0-9]+)-</from>
        <to>viewforum.jbb?f=$1</to>
	</rule>
	
	<rule>
		<from>/topic-([0-9]+)-</from>
        <to>viewtopic.jbb?t=$1</to>
	</rule>

	<rule>
		<from>/post-([0-9]+)-</from>
        <to>viewtopic.jbb?p=$1</to>
	</rule>

	<rule>
		<from>/cat-([0-9]+)-</from>
        <to>loadCategory.jbb?c=$1</to>
	</rule>

	<rule>
		<from>/noticia/([0-9]+)/page/((.*)$)</from>
        <to>noticia.jbb?noticia.notId=$1&amp;noticia.title=$2</to>
	</rule>
	
	<rule>
		<from>/noticia/([0-9]+)/((.*)$)</from>
        <to>noticia.jbb?noticia.notId=$1&amp;noticia.title=$2</to>
	</rule>	
	
	<rule>
		<from>/enviarNoticia</from>
        <to>send_noticia.jbb</to>
	</rule>

	<rule>
		<from>/noticias/page?([0-9]+)</from>
        <to>listAllNoticias.jbb?page=$1</to>
	</rule>
	<rule>
		<from>/noticias/</from>
        <to>listAllNoticias.jbb</to>
	</rule>

	<rule>
		<from>/enviarArtigo</from>
        <to>sendContent.jbb</to>
	</rule>
	
	<rule>
		<from>/catartigos/([0-9]+)/((.*)$)</from>
        <to>loadArticles.jbb?f=$1</to>
	</rule>
	
	<rule>
		<from>/artigo/([0-9]+)/((.*)$)</from>
        <to>showArticle.jbb?t=$1</to>
	</rule>
	
	<rule>
		<from>/artigos/</from>
        <to>articles.jbb</to>
	</rule>	
	
	<rule>
		<!-- from>/wiki/((.*)$)</from>
        <to>showWikiWord.jbb?word=$1</to -->

        <from>/wiki/((.+)$)</from>        
        <to>showWikiWord.jbb?word=$1</to>	
	</rule>
	
	<rule>
		<from>/wikies/</from>
        <to>loadWikies.jbb</to>
	</rule>	
	
	<!-- novos -->
	
	<rule>
		<from>/.*_f_([0-9]+)$</from>
        <to>viewforum.jbb?f=$1</to>
	</rule>
	<rule>
		<from>/.*_t_([0-9]+)$</from>
        <to>viewtopic.jbb?t=$1</to>
	</rule>
	<rule>
		<from>/.*_p_([0-9]+)$</from>
        <to>viewtopic.jbb?p=$1</to>
	</rule>
	<rule>
		<from>/.*_c_([0-9]+)$</from>
        <to>loadCategory.jbb?c=$1</to>
	</rule>
	
    <outbound-rule>
        <note>
            The outbound-rule specifies that when response.encodeURL is called (if you are using JSTL c:url)
            the url /rewrite-status will be rewritten to /test/status/.

            The above rule and this outbound-rule means that end users should never see the
            url /rewrite-status only /test/status/ both in thier location bar and in hyperlinks
            in your pages.
        </note>
        <from>/rewrite-status</from>
        <to>/test/status/</to>
    </outbound-rule>


</urlrewrite>

