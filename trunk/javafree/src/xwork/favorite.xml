	<package name="favorite_topics" extends="default">

		<action name="favorite_topics_by_user" class="topicAction" method="favoriteTopicByUser">
            <result name="success" type="velocity">
                <param name="location">/forum/favorite_topics.vm</param>
            </result>
        </action>

        <action name="favorite_topics_by_topic" class="topicAction" method="favoriteTopicsByTopic">
            <result name="success" type="velocity">
                <param name="location">/forum/favorite_topics.vm</param>
            </result>
        </action>

        <action name="favorite" class="topicAction" method="findFavoriteTopics">
            <result name="success" type="velocity">
