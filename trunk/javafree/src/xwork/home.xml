<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.0//EN" "http://www.opensymphony.com/xwork/xwork-1.0.dtd">
<xwork>
	<package name="homePackage" extends="default">

		<action name="loadHome" class="noticiasAction" method="loadHome">
            <result name="success" type="velocity">
				<param name="location">/home/index.vm</param>
            </result>
        </action>
		
		<action name="noticia" class="noticiasAction" method="loadNoticia">
            <result name="success" type="velocity">
				<param name="location">/home/show_noticia.vm</param>
            </result>
        </action>

		<action name="send_noticia" class="noticiasAction">
            <result name="success" type="velocity">
				<param name="location">/home/form_enviar_noticias.vm</param>
            </result>
			<interceptor-ref name="loginforum"/>
        </action>
		
		<action name="addNoticia" class="noticiasAction" method="addNoticia">
            <result name="success" type="velocity">
				<param name="location">/home/form_enviar_noticias.vm</param>
            </result>
            <result name="input" type="velocity">
				<param name="location">/home/form_enviar_noticias.vm</param>
            </result>
			<interceptor-ref name="loginforum"/>
        </action>		

		<action name="newsPendentes" class="noticiasAction" method="noticiasPendentes">
            <result name="success" type="velocity">
				<param name="location">/home/noticias_pendentes.vm</param>
            </result>
			<interceptor-ref name="loginModeradorStack"/>
        </action>
		
        <action name="excluirNoticia" class="noticiasAction" method="excluirNoticia">
			<result name="success" type="redirect">newsPendentes.jbb</result>
			<interceptor-ref name="loginModeradorStack"/>
        </action>

		<action name="loadEditNoticia" class="noticiasAction" method="loadEditNoticia">
            <result name="success" type="velocity">
				<param name="location">/home/form_enviar_noticias.vm</param>
            </result>
			<interceptor-ref name="loginModeradorStack"/>
        </action>
		
		<action name="saveEditNoticia" class="noticiasAction" method="updateEditNoticia">
            <result name="success" type="velocity">
				<param name="location">/home/form_enviar_noticias.vm</param>
            </result>
			<interceptor-ref name="loginModeradorStack"/>
        </action>
		
		<action name="approveNoticia" class="noticiasAction" method="approveNoticia">
			<result name="success" type="redirect">newsPendentes.jbb</result>
			<interceptor-ref name="loginModeradorStack"/>
        </action>
		
		<action name="reproveNoticia" class="noticiasAction" method="reproveNoticia">
			<result name="success" type="redirect">newsPendentes.jbb</result>
			<interceptor-ref name="loginModeradorStack"/>
        </action>
		
		<action name="listAllNoticias" class="noticiasAction" method="listAllNoticias">
            <result name="success" type="velocity">
				<param name="location">/home/all_noticias.vm</param>
            </result>
        </action>
		
		<action name="addComentario" class="noticiasAction" method="addComentario">
            <result name="success" type="velocity">
                <param name="location">/forum/redirect.vm</param>
            </result>
            <result name="input" type="velocity">
				<param name="location">/home/show_noticia.vm</param>
            </result>
			<interceptor-ref name="loginforum"/>
        </action>
		
		<action name="excluirComment" class="noticiasAction" method="excluirComment">
            <result name="success" type="velocity">
				<param name="location">/home/show_noticia.vm</param>
            </result>
			<interceptor-ref name="loginadmin"/>
        </action>
		
		<action name="sendContent" class="noticiasAction">
            <result name="success" type="velocity">
				<param name="location">/home/form_enviar_artigos.vm</param>
            </result>
        </action>
		
		<action name="articles" class="artigosAction" method="loadArticles">
            <result name="success" type="velocity">
				<param name="location">/home/all_artigos.vm</param>
            </result>
        </action>
		
		<action name="loadArticles" class="artigosAction" method="loadSingleArticle">
            <result name="success" type="velocity">
				<param name="location">/home/all_artigos_aberto.vm</param>
            </result>
        </action>
		
		<action name="showArticle" class="topicAction" method="showTopic">
            <result name="success" type="velocity">
				<param name="location">/home/show_artigo.vm</param>
            </result>
        </action>
        
		<action name="showWikiWord" class="wikiAction" method="loadWord">
            <result name="success" type="velocity">
				<param name="location">/home/show_wiki_word.vm</param>
            </result>
        </action>
		
		<action name="loadEditWikiWord" class="wikiAction" method="loadWikiById">
            <result name="success" type="velocity">
				<param name="location">/home/form_enviar_wiki.vm</param>
            </result>
			<interceptor-ref name="loginadmin"/>
        </action>
		
		<action name="saveWikiWord" class="wikiAction" method="saveWikiWord">
			<result name="success" type="redirect">loadWikies.jbb</result>
			<interceptor-ref name="loginadmin"/>
		</action>
        
		<action name="loadWikies" class="wikiAction" method="allWikies">
            <result name="success" type="velocity">
				<param name="location">/home/all_wikies.vm</param>
            </result>
        </action>
        
		<action name="wallpapers" class="wikiAction">
            <result name="success" type="velocity">
				<param name="location">/home/wallpapers.vm</param>
            </result>
        </action>
        
		<action name="sobre" class="wikiAction">
            <result name="success" type="velocity">
				<param name="location">/home/sobre.vm</param>
            </result>
        </action>
		<action name="anuncio" class="wikiAction">
            <result name="success" type="velocity">
				<param name="location">/home/anuncio.vm</param>
            </result>
        </action>

       <action name="customSearch" class="postAction">
            <result name="success" type="velocity">
                <param name="location">/home/custom_search.vm</param>
            </result>
        </action>
		
       <action name="contribuir" class="postAction">
            <result name="success" type="velocity">
                <param name="location">/home/uol_send_news.vm</param>
            </result>
        </action>
		
		
		<!-- banner -->

		<action name="listAllBanners" class="bannerAction" method="listAllBanners">
            <result name="success" type="velocity">
                <param name="location">/home/all_banners.vm</param>
            </result>
			<interceptor-ref name="loginadmin"/>
		</action>
		
		<action name="loadEditBanner" class="bannerAction" method="loadEditBanner">
            <result name="success" type="velocity">
                <param name="location">/home/form_banner.vm</param>
            </result>
			<interceptor-ref name="loginadmin"/>
		</action>

		<action name="saveBanner" class="bannerAction" method="saveBanner">
			<result name="success" type="redirect">listAllBanners.jbb</result>
			<interceptor-ref name="loginadmin"/>
		</action>

		<action name="openInsertBanner" class="bannerAction">
            <result name="success" type="velocity">
                <param name="location">/home/form_banner.vm</param>
            </result>
			<interceptor-ref name="loginadmin"/>
		</action>
		
		<action name="insertBanner" class="bannerAction" method="insertBanner">
			<result name="success" type="redirect">listAllBanners.jbb</result>
			<interceptor-ref name="loginadmin"/>
		</action>
				
		<action name="deleteBanner" class="bannerAction" method="deleteBanner">
			<result name="success" type="redirect">listAllBanners.jbb</result>
			<interceptor-ref name="loginadmin"/>
        </action>
		
		<action name="displayBanner" class="bannerAction" method="displayBanner">
            <result name="success" type="velocity">
                <param name="location">/home/displayBanner.vm</param>
            </result>
        </action>
		
			
				
		<!-- Lucene Temps -->

		<action name="luceneNoticias" class="noticiasAction" method="indexLuceneNoticias">
			<result name="success" type="redirect">listAllBanners.jbb</result>
			<interceptor-ref name="loginadmin"/>
		</action>
		
		<action name="luceneWiki" class="wikiAction" method="luceneReloadWiki">
			<result name="success" type="redirect">loadHome.jbb</result>
			<interceptor-ref name="loginadmin"/>
		</action>

		<!-- //Lucene Reloads -->
		
		
		
		
	</package>
</xwork>