<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.0//EN" "http://www.opensymphony.com/xwork/xwork-1.0.dtd">
<xwork>
	<package name="pm" extends="default">
		
		<action class="pmAction" name="inbox" method="inbox">
			<result name="success" type="velocity">/forum/modules/pm/inbox.vm</result>
			<interceptor-ref name="loginforum" />
		</action>

		<action class="pmAction" name="outbox" method="outbox">
			<result name="success" type="velocity">/forum/modules/pm/outbox.vm</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="new" class="pmAction" method="newPm">
			<result name="success" type="velocity">/forum/modules/pm/formSend.vm</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="send" class="pmAction" method="send">
			<result name="success" type="redirect">inbox.jbb</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="deleteSelectedInbox" class="pmAction" method="deleteSelectedInbox">
			<result name="success" type="chain">
				<param name="actionName">inbox</param>
			</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="deleteInbox" class="pmAction" method="deleteInbox">
			<result name="success" type="chain">
				<param name="actionName">inbox</param>
			</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="deleteSelectedOutbox" class="pmAction" method="deleteSelectedOutbox">
			<result name="success" type="chain">
				<param name="actionName">outbox</param>
			</result>
			<interceptor-ref name="loginforum" />		
		</action>
		
		<action name="deleteOutbox" class="pmAction" method="deleteOutbox">
			<result name="success" type="chain">
				<param name="actionName">outbox</param>
			</result>
			<interceptor-ref name="loginforum" />	
		</action>		
		
		<action name="readIn" class="pmAction" method="readIn">
			<result name="success" type="velocity">/forum/modules/pm/read.vm</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="readOut" class="pmAction" method="readOut">
			<result name="success" type="velocity">/forum/modules/pm/read.vm</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="find" class="userAction" method="listByUserName">
			<result name="success" type="velocity">/forum/modules/pm/find.vm</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="pm.reply" class="pmAction" method="reply">
			<result name="success" type="velocity">/forum/modules/pm/formSend.vm</result>
			<interceptor-ref name="loginforum" />
		</action>
		
		<action name="pm.quote" class="pmAction" method="quote">
			<result name="success" type="velocity">/forum/modules/pm/formSend.vm</result>
			<interceptor-ref name="loginforum" />
		</action>

		<action name="pm.externalSend" class="pmAction" method="externalSend">
			<result name="success" type="velocity">/forum/modules/pm/formSend.vm</result>
			<interceptor-ref name="loginforum" />
		</action>

	</package>
</xwork>