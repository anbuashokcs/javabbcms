<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.User" 
    table="jbb_users"
>

    <id
        name="idUser"
        type="java.lang.Long"
        column="id_user"
    >
		<generator class="sequence">
			<param name="sequence">SEQ_USER</param>
        </generator>
    </id>

    <property
        name="user"
        type="java.lang.String"
        column="user_name"
        length="-1"
    />
    <property
        name="passwordHash"
        type="java.lang.String"
        column="pws"
        length="-1"
    />
    <property
        name="name"
        type="java.lang.String"
        column="name"
        length="-1"
    />
    <property
        name="email"
        type="java.lang.String"
        column="email"
        length="-1"
    />
    <property
        name="localizacao"
        type="java.lang.String"
        column="localizacao"
        length="-1"
    />	
    <property
        name="website"
        type="java.lang.String"
        column="website"
        length="-1"
    />	

    <property
        name="occupation"
        type="java.lang.String"
        column="occupation"
        length="-1"
    />	
	
    <property
        name="user_posts"
        type="java.lang.Long"
        column="posts"
        length="4"
    />
   
    <property
        name="admin"
        type="java.lang.Integer"
        column="admin"
        length="-1"
    />

    <property
        name="dataRegistro"
        type="java.util.Date"
        column="data_registro"
        length="20"
    />

    <property
        name="userSig"
        type="java.lang.String"
        column="user_sig"
        length="-1"
    />

    <property
        name="user_msnm"
        type="java.lang.String"
        column="user_msnm"
        length="-1"
    />
    <property
        name="lastVisitTimestamp"
        type="java.util.Date"
        column="last_visit_timestamp"
        length="-1"
    />
    <property
        name="user_dateformat"
        type="java.lang.String"
        column="user_dateformat"
        length="-1"
    />
    <property
        name="user_allow_viewonline"
        type="java.lang.String"
        column="user_allow_viewonline"
        length="-1"
    />
    <property
        name="user_avatar"
        type="java.lang.String"
        column="user_avatar"
        length="-1"
    />
    <property
        name="user_icq"
        type="java.lang.String"
        column="user_icq"
        length="-1"
    />
    <property
        name="user_interests"
        type="java.lang.String"
        column="user_interests"
        length="-1"
    />
    <property
        name="user_aim"
        type="java.lang.String"
        column="user_aim"
        length="-1"
    />
    <property
        name="user_yim"
        type="java.lang.String"
        column="user_yim"
        length="-1"
    />	

    <property
        name="show_mail"
        type="java.lang.Integer"
        column="show_mail"
        length="-1"
    />	
    
    <property
        name="show_signature"
        type="java.lang.Integer"
        column="show_signature"
        length="-1"
    />	    


    <property
        name="userStatus"
        type="java.lang.Integer"
        column="user_status"
        length="1"
    />
	
    <!-- associations -->
    <!-- bi-directional one-to-many association to Post -->
    <!-- set
        name="posts"
        lazy="true"
        inverse="true"
    >
        <key>
            <column name="id_user" />
        </key>
        <one-to-many 
            class="org.javabb.vo.Post"
        />
    </set -->
    <!-- bi-directional one-to-many association to Topic -->
    <!--set
        name="topics"
        lazy="true"
        inverse="true"
    >
        <key>
            <column name="id_user" />
        </key>
        <one-to-many 
            class="org.javabb.vo.Topic"
        />
    </set -->

	<!-- one-to-one 
		name="session" 
		class="org.javabb.vo.Session" 
		column="id_user"/ -->	

</class>
</hibernate-mapping>
