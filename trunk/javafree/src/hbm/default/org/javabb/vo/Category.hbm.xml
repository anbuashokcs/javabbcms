<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.Category" 
    table="jbb_category"
>

    <cache usage="read-only" />

    <id
        name="idCategory"
        type="java.lang.Long"
        column="id_category"
    >
		<generator class="increment"/>
    </id>

    <property
        name="nameCategory"
        type="java.lang.String"
        column="nm_category"
        length="200"
    />

    <property
        name="catOrder"
        type="java.lang.Integer"
        column="cat_order"
        length="10"
    />

    <!-- associations -->
     <bag
        name="foruns"
        lazy="true"
        inverse="true"
        order-by="forum_order"
    >
        <key>
            <column name="id_category" />
        </key>
        <one-to-many 
            class="org.javabb.vo.Forum"
        />
    </bag>



</class>
</hibernate-mapping>
