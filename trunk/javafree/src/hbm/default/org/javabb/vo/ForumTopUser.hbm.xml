<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.ForumTopUser" 
    table="jbb_forum_top_user"
>

    <composite-id name="comp_id" class="org.javabb.vo.ForumTopUserPK">

        <key-property 
            name="idForum" 
            column="id_forum" 
            type="java.lang.Long"
            length="8"
        >
        </key-property>
        <key-property 
            name="idUser" 
            column="id_user" 
            type="java.lang.Long"
            length="8"
        >
        </key-property>
    </composite-id>    

	<property
        name="postCount"
        type="java.lang.Long"
        column="post_count"
        length="-1"
    />

	<property
        name="dateRow"
        type="java.util.Date"
        column="date_row"
        length="-1"
    />	
		

    <!-- Associations -->
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="user"
	    class="org.javabb.vo.User"
	    update="false"
	    insert="false"
	>
    	<column name="id_user" />
	</many-to-one>
	
    <!-- bi-directional many-to-one association to Topic -->
    <many-to-one
        name="forum"
	    class="org.javabb.vo.Forum"
	    update="false"
	    insert="false"
	>
    	<column name="id_forum" />
	</many-to-one>
	
    <!-- end of derived association(s) -->
  

</class>
</hibernate-mapping>
