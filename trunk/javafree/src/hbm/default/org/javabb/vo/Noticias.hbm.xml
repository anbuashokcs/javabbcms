<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.Noticias" 
    table="noticias"
>

   <id
        name="notId"
        type="java.lang.Long"
        column="not_id"
    >
		<generator class="increment"/>
    </id> 

	<property
        name="publishDate"
        type="java.util.Date"
        column="publish_date"
        length="-1"
    />

	<property
        name="title"
        type="java.lang.String"
        column="title"
        length="-1"
    />	

	<property
        name="linkImg"
        type="java.lang.String"
        column="link_img"
        length="-1"
    />		
	
	<property
        name="views"
        type="java.lang.Integer"
        column="nmb_views"
        length="-1"
    />	
	
	<property
        name="body"
        type="java.lang.String"
        column="body"
        length="-1"
    />
	
	<property
        name="link"
        type="java.lang.String"
        column="link"
        length="-1"
    />			

	<property
        name="active"
        type="java.lang.Integer"
        column="active"
        length="-1"
    />	
	
	<property
        name="home"
        type="java.lang.Integer"
        column="home"
        length="-1"
    />		
	

    <!-- Associations -->
	
	<bag
        name="comments"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="not_id" />
        </key>
        <one-to-many 
            class="org.javabb.vo.Comment"
        />
    </bag>	
	
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="user"
	    class="org.javabb.vo.User"
	    update="true"
	    insert="true"
	>
    	<column name="id_user" />
	</many-to-one>
	

	
	
    <!-- end of derived association(s) -->
  

</class>
</hibernate-mapping>
