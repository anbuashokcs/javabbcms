<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
    <class 
        name="org.javabb.vo.Smile" 
        table="jbb_smiles"
    >

        <cache usage="read-only"/>
    
        <id
            name="id"
            type="java.lang.Long"
            column="id"
        >
            <generator class="increment"/>
        </id>
    
        <property
            name="symbol"
            type="java.lang.String"
            column="symbol"
            length="5"
        />
        <property
            name="emoticon"
            type="java.lang.String"
            column="emoticon"
            length="20"
        />
        <property
            name="filename"
            type="java.lang.String"
            column="filename"
            length="100"
        />
    
    </class>
</hibernate-mapping>
