<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.FavUserTopic" 
    table="jbb_fav_topic"
>
	
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="jbb_fav_topic"
    </meta>

    <composite-id name="comp_id" class="org.javabb.vo.FavUserTopicPK">
        <meta attribute="field-description" inherit="false">
           @hibernate.id
            generator-class="assigned"
        </meta>
        <key-property 
            name="idTopic" 
            column="id_topic" 
            type="java.lang.Long"
            length="8"
        >
            <meta attribute="field-description">
               @hibernate.property
                column="id_topic"
            </meta> 
        </key-property>
        <key-property 
            name="idUser" 
            column="id_user" 
            type="java.lang.Long"
            length="8"
        >
            <meta attribute="field-description">
               @hibernate.property
                column="id_user"
            </meta> 
        </key-property>
    </composite-id>    


    <!-- Associations -->
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="user"
	    class="org.javabb.vo.User"
	    update="false"
	    insert="false"
	>
        <meta attribute="field-description">
           @hibernate.many-to-one
            update="false"
            insert="false"
        </meta>
        <meta attribute="field-description">
           @hibernate.column
            name="id_user"
        </meta>
    	<column name="id_user" />
	</many-to-one>
	
    <!-- bi-directional many-to-one association to Topic -->
    <many-to-one
        name="topic"
	    class="org.javabb.vo.Topic"
	    update="false"
	    insert="false"
	>
        <meta attribute="field-description">
           @hibernate.many-to-one
            update="false"
            insert="false"
        </meta>
        <meta attribute="field-description">
           @hibernate.column
            name="id_topic"
        </meta>
    	<column name="id_topic" />
	</many-to-one>
	
    <!-- end of derived association(s) -->
  

</class>
</hibernate-mapping>
