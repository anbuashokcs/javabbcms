<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
    <class 
        name="org.javabb.vo.Wiki" 
        table="wiki"
    >

    
        <id
            name="id"
            type="java.lang.Long"
            column="id"
        >
            <generator class="increment"/>
        </id>
    
        <property
            name="word"
            type="java.lang.String"
            column="word"
            length="255"
        />
        <property
            name="body"
            type="java.lang.String"
            column="body"
            length="-1"
        />  
    </class>
</hibernate-mapping>
