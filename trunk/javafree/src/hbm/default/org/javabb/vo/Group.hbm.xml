<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<!-- 
	@author: Dalton Camargo
	dalton@javabb.org
	$Id: Group.hbm.xml,v 1.1 2009/05/11 20:26:53 daltoncamargo Exp $
-->

<class 
    name="org.javabb.vo.Group" 
    table="jbb_group"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="jbb_group"
    </meta>

    <id
        name="groupId"
        type="java.lang.Long"
        column="group_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="assigned"
            type="java.lang.Long"
            column="group_id"

        </meta>
        <generator class="assigned" />
    </id>

    <property
        name="groupName"
        type="java.lang.String"
        column="group_name"
        length="255"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="group_name"
            length="255"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to UserGroup -->
    <set
        name="userGroups"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="group_id"

           @hibernate.collection-one-to-many
            class="org.javabb.vo.UserGroup"
        </meta>
        <key>
            <column name="group_id" />
        </key>
        <one-to-many 
            class="org.javabb.vo.UserGroup"
        />
    </set>
    <!-- bi-directional one-to-many association to GroupModerator -->
    <set
        name="groupModerators"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="group_id"

           @hibernate.collection-one-to-many
            class="org.javabb.vo.GroupModerator"
        </meta>
        <key>
            <column name="group_id" />
        </key>
        <one-to-many 
            class="org.javabb.vo.GroupModerator"
        />
    </set>
    <!-- bi-directional one-to-many association to JbbGroupPermission -->
    <set
        name="groupPermissions"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="group_id"

           @hibernate.collection-one-to-many
            class="org.javabb.vo.GroupPermission"
        </meta>
        <key>
            <column name="group_id" />
        </key>
        <one-to-many 
            class="org.javabb.vo.GroupPermission"
        />
    </set>
    <!-- bi-directional many-to-one association to JbbUser -->
    <many-to-one
        name="user"
        class="org.javabb.vo.User"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="id_user"         
        </meta>
        <column name="id_user" />
    </many-to-one>

</class>
</hibernate-mapping>
