<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.BadWord" 
    table="jbb_badwords"
>

      <cache usage="read-only"/>

    <id
        name="id"
        type="java.lang.Long"
        column="id_badword"
    >
		<generator class="increment"/>
    </id>

    <property
        name="word"
        type="java.lang.String"
        column="word"
        length="50"
    />
    <property
        name="replacement"
        type="java.lang.String"
        column="replacement"
        length="50"
    />

</class>
</hibernate-mapping>
