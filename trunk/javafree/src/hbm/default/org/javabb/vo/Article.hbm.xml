<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.Article" 
    table="article"
>

   <id
        name="artId"
        type="java.lang.Long"
        column="art_id"
    >
		<generator class="increment"/>
    </id> 


	<property
        name="name"
        type="java.lang.String"
        column="name"
        length="-1"
    />

	<property
        name="about"
        type="java.lang.String"
        column="about"
        length="-1"
    />	

	<property
        name="datePub"
        type="java.util.Date"
        column="date_pub"
        length="-1"
    />		

	<property
        name="views"
        type="java.lang.Integer"
        column="views"
        length="-1"
    />	

	<property
        name="body"
        type="java.lang.String"
        column="body"
        length="-1"
    />		
	
	<property
        name="active"
        type="java.lang.Integer"
        column="active"
        length="-1"
    />	
	
    <!-- Associations -->
	
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="catArticle"
	    class="org.javabb.vo.CatArticle"
	>
    	<column name="cat_id" />
	
	</many-to-one>

	
    <!-- end of derived association(s) -->
  

</class>
</hibernate-mapping>
