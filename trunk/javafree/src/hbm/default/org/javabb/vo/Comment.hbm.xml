<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.javabb.vo.Comment" 
    table="comment"
>

   <id
        name="id"
        type="java.lang.Long"
        column="id"
    >
		<generator class="increment"/>
    </id> 


	<property
        name="body"
        type="java.lang.String"
        column="body"
        length="-1"
    />
	
	<property
        name="datePublished"
        type="java.util.Date"
        column="date_published"
        length="-1"
    />		


    <!-- Associations -->
	
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="user"
	    class="org.javabb.vo.User"
	>
    	<column name="id_user" />
	
	</many-to-one>

	<many-to-one
        name="noticias"
	    class="org.javabb.vo.Noticias"
	>
    	<column name="not_id" />
	</many-to-one>

	
	
    <!-- end of derived association(s) -->
  

</class>
</hibernate-mapping>
