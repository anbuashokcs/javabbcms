<html>
<head>
<HEAD>
<TITLE>$jbbConfig.getForumConfig().getForumName() :: #message("pms")</TITLE>
<script language="Javascript" type="text/javascript">
  function confirmDelete(method){
  	if(confirm("#message("confirm_delete")")){
  		if(method == 1){
			document.getElementById("frmDeleteInbox").submit();
  		}else{
  			document.location.href="deleteInbox.jbb";
  		}
 	 }
  }
</script>
