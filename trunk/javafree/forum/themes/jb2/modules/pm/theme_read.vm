<html>
<head>
<HEAD>
<TITLE>$jbbConfig.getForumConfig().getForumName() :: #message("pms")</TITLE>

<script language="Javascript" type="text/javascript">
  function confirmDelete(id){
  	if(confirm("#message("confirm_delete")")){
		document.location.href="deleteSelectedOutbox.jbb?idPm=" + id;
 	 }
  }
</script>

#parse("forum/themes/jb2/header.vm")

 <TR>
    <TD background="forum/themes/jb2/images/_fadetop.gif" colSpan=2 height=12></TD>
 </TR>
  <TR align=middle bgColor=#ffffff>
    <TD class=mainbody colSpan=2>
      
<table width="100%" cellspacing="1" cellpadding="3" border="0" align="center">      
  <tr>
	<td valign="top" align="center" width="100%">
	  <table height="40" cellspacing="2" cellpadding="2" border="0">
		<tr valign="middle">
		  <td><a href="inbox.jbb"><img src="forum/themes/jb2/images/msg_inbox.gif" border="0" alt='#message("inbox")' /></td>
