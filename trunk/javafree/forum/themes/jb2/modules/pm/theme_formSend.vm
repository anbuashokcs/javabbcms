                <TD colSpan=9><SPAN class=gen>
                <TEXTAREA class=post onkeyup=storeCaret(this); style="WIDTH: 450px" onclick=storeCaret(this); tabIndex=3 name="message" id="message" rows=15 wrap=virtual cols=35 onselect=storeCaret(this);>$!msg</TEXTAREA> 
                  </SPAN></TD></TR></TBODY></TABLE></SPAN></TD></TR>
