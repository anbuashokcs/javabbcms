 <FORM name="post" id="post" action="send.jbb" method="post">  
 	
   <input type="hidden" name="userId" id="userId" value="$!userId"/>
   <input type="hidden" name="pm.text" id="pm.text" value=""/>
   
   <TABLE class=forumline cellSpacing=1 cellPadding=3 width="100%" 
        border=0><TBODY>
        <TR>
          <TH class=thHead colSpan=2 height=25><B>#message("pm.new")</B></TH></TR>
        <TR>
          <TD class=row1 width="22%"><SPAN class=gen><B>#message("pm.userDest")</B></SPAN></TD>
          <TD class=row2 width="78%"><SPAN class=gen>
          #if ($act == "new")
            <INPUT readonly class=post style="WIDTH: 365px" tabIndex=2 maxLength=60 size=30 name="username" value="$!username">&nbsp;&nbsp;<input type="button" onClick="window.open('find.jbb', '', 'HEIGHT=250,resizable=yes,WIDTH=400');return false;" class="liteoption" value='#message("findUser")'/>
          #else 
            <INPUT readonly class=post style="WIDTH: 450px" tabIndex=2 maxLength=60 size=30 name="username" value="$!username">
          #end
            </SPAN></TD></tr>
        <tr>          
          <TD class=row1 width="22%"><SPAN class=gen><B>#message("pm.subject")</B></SPAN></TD>
          <TD class=row2 width="78%"><SPAN class=gen>
          <INPUT class=post style="WIDTH: 450px" tabIndex=2 maxLength=60 size=45 id="pm.topic" name="pm.topic" value="$!title"> 
            </SPAN></TD></TR>
        <TR>
          <TD class=row1 vAlign=top>
            <TABLE cellSpacing=0 cellPadding=1 width="100%" border=0>
              <TBODY>
              <TR>
                <TD><SPAN class=gen><B>#message("pm.text")</B></SPAN> </TD></TR>
              <TR>
                <TD vAlign=center align=middle><BR>
