    </FORM>

<script language="JavaScript" type="text/javascript">
	function changeValues(){
		document.getElementById("pm.text").value = document.getElementById("message").value;
	}

	var frmvalidator  = new Validator("post");
	frmvalidator.addValidation("username","req","#message("field_mandatory")");

	frmvalidator.addValidation("pm.topic","req","#message("field_mandatory")");	
	frmvalidator.addValidation("pm.topic","minlen=2","#message("field_mandatory")");
	
	frmvalidator.addValidation("message","req","#message("field_mandatory")");	
	frmvalidator.addValidation("message","minlen=3","#message("field_mandatory")");
 
	frmvalidator.setAddnlValidationFunction("changeValues");

</script>   
  
  
