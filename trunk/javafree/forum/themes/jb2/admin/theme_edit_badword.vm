<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"  />
#parse("forum/themes/${jbbConfig.forumConfig.theme}/css/css.vm")
<title>JavaBB</title>
<script src="$basePath/forum/include/gen_validatorv2.js" type="text/javascript"></script>
</head>
<body bgcolor="#FFFFFF" text="#000000" link="#006699" vlink="#5493B4">

<a name="top"></a>
<br /><br />
#if($badWord.idBadWord.toString() != "")
    <h1>#message("edit_badword")</h1>
#else
    <h1>#message("new_badword")</h1>
#end

#if($badWord.idBadWord.toString() != "")
  <form name="manage_bw" id="manage_bw" action="edit_badword.jbb" method="post">
  <input type="hidden" name="id" value="$badWord.idBadWord">
#else
  <form name="manage_bw" id="manage_bw" action="add_badword.jbb" method="post" onsubmit="return valida();">
#end

  <table width="100%" cellpadding="4" cellspacing="1" border="0" class="forumline" align="center">
  <tr>
    <th class="cat" colspan="2">#message("badword")</th>
  </tr>
  <tr>
    <td class="row1">#message("badword")</td>
    <td class="row2"><input type="text" size="25" name="word" id="word" value="$!badWord.word" class="post" /></td>
  </tr>
  <tr>
    <td class="row1">#message("badword_replacement")</td>
    <td class="row2"><input type="text" size="25" name="replacement" id="replacement" value="$!badWord.replacement" class="post" /></td>
  </tr>
  <tr>
    <td class="cat" colspan="2" align="center">
    	<input type="submit" name="submit" value="#message("send")" class="mainoption" />
   		<input class=liteoption type=button value="#message("cancel")" onclick="history.back()" />
   	</td>
  </tr>
  </table>
</form>

<br clear="all" />

<script language="JavaScript" type="text/javascript">

 var frmvalidator  = new Validator("manage_bw");
 frmvalidator.addValidation("word","req","#message("field_mandatory")");
 frmvalidator.addValidation("word","minlen=1","#message("field_mandatory")");

 frmvalidator.addValidation("replacement","req","#message("field_mandatory")");
 frmvalidator.addValidation("replacement","minlen=1","#message("field_mandatory")");

</script>


#parse("forum/themes/jb2/admin/theme_footer.vm")

</body>
</html>
