<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"  />
#parse("forum/themes/${jbbConfig.forumConfig.theme}/css/css.vm")
<title>JavaBB</title>
<script src="forum/include/gen_validatorv2.js" type="text/javascript"></script>
</head>

<body bgcolor="#FFFFFF" text="#000000" link="#006699" vlink="#5493B4">

<a name="top"></a>

#if($category.idCategory.toString() != "")
  <form name="frmCat" id="frmCat" action="save_update_category.jbb" method="post">
  <input type="hidden" name="category.idCategory" value="$category.idCategory">
	<h1>#message("adm.category.edit")</h1>
#else
  <form name="frmCat" id="frmCat" action="save_insert_category.jbb" method="post">
  	<h1>#message("adm.category.new")</h1>
#end

  <table width="100%" cellpadding="4" cellspacing="1" border="0" class="forumline" align="center">
  <tr>
    <th class="cat" colspan="2">#message("general_config")</th>
  </tr>
  <tr>
    <td class="row1">#message("adm.category.name")</td>
    <td class="row2">
    <input type="text" size="50" id="category.nameCategory" name="category.nameCategory" value="$!category.nameCategory" class="post" />
    </td>
  </tr>

  <tr>
    <td class="cat" colspan="2" align="center">
    	<input type="submit" name="submit" value="#message("send")" class="mainoption" />
		<input class=liteoption type=button value="#message("cancel")" onclick="history.back()" />
    	</td>
  </tr>
  </table>
</form>

<br clear="all" />

<script language="JavaScript" type="text/javascript">
 var frmvalidator  = new Validator("frmCat");
 frmvalidator.addValidation("category.nameCategory","req","#message("field_mandatory")");
 frmvalidator.addValidation("category.nameCategory","minlen=3","#message("field_mandatory")");

// frmvalidator.setAddnlValidationFunction("verificaUnidadeEntrega");

</script>


#parse("forum/themes/jb2/admin/theme_footer.vm")

</body>
</html>
