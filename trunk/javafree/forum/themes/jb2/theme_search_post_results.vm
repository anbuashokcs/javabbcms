<html>
<head>
 <TITLE>$jbbConfig.forumConfig.forumName :: #message("all_posts_from_author")</TITLE>
</head>

#parse("forum/themes/jb2/header.vm")
 <TR>
    <TD background="forum/themes/jb2/images/_fadetop.gif" colSpan=2 height=12></TD>
 </TR>
  <TR align=middle bgColor=#ffffff>
    <TD class=mainbody colSpan=2>
      <TABLE cellSpacing=0 cellPadding=2 width="100%" align=center border=0>
          <TBODY>
            <TR> 
              <TD align=left vAlign=bottom><SPAN class=gensmall><BR>
                </SPAN><SPAN class=nav>
                <A class=nav href="forum.jbb">$jbbConfig.forumConfig.forumName - #message("index_forum")</A></SPAN></TD>
            </TR>
          </TBODY>
      </TABLE>


<h2> #message("search_found") $posts.size() #message("results") </h2>

#if ($posts.size() > 0)

<table width="100%" cellpadding="4" cellspacing="1" border="0" class="forumline" align="center">
  <tr>
  <th width="4%" height="25" class="thCornerL" nowrap="nowrap">&nbsp;</th>
  <th class="thTop" nowrap="nowrap">&nbsp;#message("forum")&nbsp;</th>
  <th class="thTop" nowrap="nowrap">&nbsp;#message("topic")&nbsp;</th>
  <th class="thTop" nowrap="nowrap">&nbsp;#message("author")&nbsp;</th>

  <th class="thTop" nowrap="nowrap">&nbsp;#message("answers")&nbsp;</th>
  <th class="thTop" nowrap="nowrap">&nbsp;#message("displays")&nbsp;</th>
  <th class="thCornerR" nowrap="nowrap">&nbsp;#message("last_message")&nbsp;</th>
  </tr>

  #foreach ($post in $posts)
  <tr>
  
  <td class="row1" align="center" valign="middle">
    <A href="viewtopic.jbb?t=$!{post.topic.id}#$!{post.id}">
      <img src="forum/themes/jb2/images/lang_english/folder.gif" width="19" height="18" border="0" />
    </a>
  </td>
  
  <td class="row1">
    <span class="forumlink">
      <a href="viewforum.jbb?f=$!{post.topic.forum.id}" class="forumlink">$!{post.topic.forum.nome}</a>
    </span>
  </td>
  
  <td class="row2">
    <span class="topictitle">
      <a href="viewtopic.jbb?t=$!{post.topic.idTopic}" class="topictitle">$!{post.topic.titleTopic}</a>
    </span>
  </td>
  
  <td class="row1" align="center" valign="middle">
    <span class="name">
      <a href="viewprofile.jbb?u=$!{post.user.id}">$!{post.user.user}</a>
    </span>
  </td>
  
  <td class="row2" align="center" valign="middle">
    <span class="postdetails">$!{post.topic.respostas}</span>
  </td>
  
  <td class="row1" align="center" valign="middle">
    <span class="postdetails">$!{post.topic.visualizacoes}</span>
  </td>
  
  <td class="row2" align="center" valign="middle" nowrap="nowrap">
  <SPAN class=postdetails>$!{post.topic.lastPost.data_formated}<BR>
  <A href="viewprofile.jbb?u=$!{post.topic.lastPost.user.id}">
  $!{post.topic.lastPost.user.user}
  </A>
  <A href="viewtopic.jbb?t=$!{post.topic.id}#$!{post.topic.lastPost.id}">
  <IMG title="#message("show_last_message")" alt="#message("show_last_message")" src="forum/images/buttons/$jbbConfig.forumConfig.buttonLang/icon_latest_reply.gif" border=0>
  </A>
  </SPAN>
  </td>

  </tr>
  #end
  
  <tr>
  <th class="catBottom" colspan="7" height="28" valign="middle">&nbsp; </td>
  </tr>
</table>

<table width="100%" cellspacing="2" border="0" align="center" cellpadding="2">
  <tr>
  <td align="left" valign="top"><span class="nav">Page <b>1</b> of <b>1</b></span></td>

  <td align="right" valign="top" nowrap="nowrap"><span class="nav"></span><br /><span class="gensmall">#message("all_times") GMT -3 #message("hours")</span></td>
  </tr>
</table>  

#end

#parse("forum/themes/jb2/footer.vm")